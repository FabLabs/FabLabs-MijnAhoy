<div id="pageTitle">
    <h1>New Agenda</h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :index %>
</div>


<div id="content">

    <form method="POST" action="<%= url_for :action => :create %>">
	    <input type="hidden" name="id" value="<%= @agenda.object %>"/>
        <table>
    		
    		  <tr>
    			  <td class="itemLabel">Titel: </td>
    			  <td class="itemValue"><input type="text" name="agenda[titel]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Datum: </td>
    			  <td class="itemValue"><input type="text" name="agenda[datum]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Category: </td>
    			  <td class="itemValue"><input type="text" name="agenda[category]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Text: </td>
    			  <td class="itemValue"><input type="text" name="agenda[text]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Imagesmall: </td>
    			  <td class="itemValue"><input type="text" name="agenda[imagesmall]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Imagebig: </td>
    			  <td class="itemValue"><input type="text" name="agenda[imagebig]"/></td>
    		  </tr>
    		
        </table>
        <input type="submit" class="standardButton" value="Create" />
    </form>
</div>