<div id="pageTitle">
	<h1>Edit <%= @info.titel%></h1>
</div>

<div id="toolbar">
    <div id="leftItem" class="backButton"><%= link_to "Cancel", :action => :show, :id => @info.object %></div>
    <div id="rightItem" class="regularButton"><%= link_to "Delete", :action => :delete, :id => @info.object %></div>
</div>

<div id="content">
    <form method="POST" action="<%= url_for :action => :update %>">
            <input type="hidden" name="id" value="<%= @info.object %>"/>
            <ul>
                
                <li>
                    <label for="info[titel]" class="fieldLabel">Titel</label>
                    <input type="text" name="info[titel]" value="<%= @info.titel%>" <%= placeholder( "Titel" ) %> />
                </li>
                
            </ul>
            <input type="submit" class="standardButton" value="Update" />
    </form>
</div>